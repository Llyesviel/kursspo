@{
    ViewData["Title"] = "Главная";
}

<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto text-center">
                <h1 class="hero-title">Flyfty</h1>
                <p class="hero-subtitle">Найдите лучшие авиабилеты для вашего путешествия</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="search-card">
                    <form asp-controller="Home" asp-action="SearchFlights" method="get">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="flightType">Тип полета</label>
                                    <select class="form-control" id="flightType" name="flightType">
                                        <option value="oneway">В одну сторону</option>
                                        <option value="round">Туда и обратно</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="origin">Откуда</label>
                                    <input type="text" id="origin" name="origin" class="form-control" placeholder="Париж" required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="destination">Куда</label>
                                    <input type="text" id="destination" name="destination" class="form-control" placeholder="Нью-Йорк" required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="passengers">Пассажиры и класс</label>
                                    <input type="text" id="passengers" name="passengers" class="form-control" placeholder="1 взрослый, бизнес-класс" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="departureDate">Дата вылета</label>
                                    <input type="date" id="departureDate" name="departureDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="returnDate">Дата возвращения</label>
                                    <input type="date" id="returnDate" name="returnDate" class="form-control" value="@DateTime.Today.AddDays(7).ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100 mt-4">
                                    <i class="fas fa-search"></i> Найти рейсы
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


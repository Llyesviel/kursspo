                <h5>Отчеты</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="TicketSalesReport" 
                       asp-route-startDate="@DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd")" 
                       asp-route-endDate="@DateTime.Today.ToString("yyyy-MM-dd")" 
                       class="btn btn-outline-primary">
                        Отчет о продаже билетов
                    </a>
                    <a asp-controller="Home" asp-action="FlightLoadReport" class="btn btn-outline-primary">
                        Отчет о загруженности рейсов
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


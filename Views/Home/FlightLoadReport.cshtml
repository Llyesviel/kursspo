@model IEnumerable<Flight>

@{
    ViewData["Title"] = "Отчет о загруженности рейсов";
}

<h1>Отчет о загруженности рейсов</h1>
<h4>На дату: @DateTime.Today.ToString("dd.MM.yyyy")</h4>

<div class="mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">На главную</a>
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>№ рейса</th>
                <th>Самолет</th>
                <th>Время вылета</th>
                <th>Загруженность</th>
                <th>Свободные места</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FlightNumber</td>
                    <td>@item.Aircraft.Name</td>
                    <td>@item.DepartureTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar @GetProgressBarClass(item.LoadPercentage)" 
                                 role="progressbar" 
                                 style="width: @item.LoadPercentage%;" 
                                 aria-valuenow="@item.LoadPercentage" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                                @item.LoadPercentage%
                            </div>
                        </div>
                    </td>
                    <td>@item.AvailableSeats из @item.Aircraft.SeatCount</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        @if (item.AvailableSeats > 0)
                        {
                            <a asp-controller="Ticket" asp-action="Create" asp-route-flightId="@item.Id" class="btn btn-sm btn-success">Продать билет</a>
                        }
                        else
                        {
                            <span class="badge bg-danger">Нет мест</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Нет активных рейсов.
    </div>
}

@functions {
    public string GetProgressBarClass(int percentage)
    {
        if (percentage >= 80)
            return "bg-danger";
        else if (percentage >= 50)
            return "bg-warning";
        else
            return "bg-success";
    }
} 
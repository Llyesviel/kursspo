@model Airport.Models.Ticket
@{
    ViewData["Title"] = "Билет успешно забронирован";
    
    // Получаем город отправления и прибытия
    string departureCity = Model.Flight.Departures?.FirstOrDefault()?.Location ?? "Неизвестно";
    string arrivalCity = Model.Flight.Landings?.FirstOrDefault()?.Location ?? "Неизвестно";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white">Билет успешно забронирован</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4 text-center">
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success" style="font-size: 64px;"></i>
                        </div>
                        <h5>Поздравляем! Ваш билет успешно забронирован.</h5>
                        <p class="text-muted">Номер билета: @Model.TicketNumber</p>
                    </div>

                    <div class="flight-info mb-4">
                        <h5 class="mb-3">Информация о рейсе</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Маршрут</h6>
                                        <p class="card-text">
                                            <strong>@departureCity</strong>
                                            <i class="fas fa-arrow-right mx-2"></i>
                                            <strong>@arrivalCity</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Рейс</h6>
                                        <p class="card-text">
                                            <strong>@Model.Flight.FlightNumber</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Вылет</h6>
                                        <p class="card-text">
                                            <strong>@Model.Flight.DepartureTime.ToString("dd.MM.yyyy HH:mm")</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="passenger-info mb-4">
                        <h5 class="mb-3">Данные пассажира</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">ФИО</h6>
                                        <p class="card-text">
                                            <strong>@Model.PassengerName</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Место</h6>
                                        <p class="card-text">
                                            <strong>@Model.SeatNumber</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Стоимость</h6>
                                        <p class="card-text">
                                            <strong>@Model.Flight.Price.ToString("N0") ₽</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Информация о билете доступна в разделе "Мои билеты"
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <a asp-controller="Booking" asp-action="MyTickets" class="btn btn-primary me-3">
                                <i class="fas fa-ticket-alt me-2"></i>Мои билеты
                            </a>
                            <a asp-controller="Home" asp-action="SearchFlights" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i>Искать другие рейсы
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
@using Airport.Models
@model Departure

@{
    ViewData["Title"] = "Добавить вылет";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-action="Index" class="admin-btn admin-btn-secondary">
            <i class="fas fa-arrow-left"></i> Вернуться к панели
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="admin-card-title">Информация о вылете</h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="CreateDeparture">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FlightId" class="form-label">Рейс</label>
                        <select asp-for="FlightId" class="form-select" asp-items="ViewBag.FlightId"></select>
                        <span asp-validation-for="FlightId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Location" class="form-label">Место</label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Time" class="form-label">Время вылета</label>
                        <input asp-for="Time" class="form-control" type="time" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group d-flex">
                <button type="submit" class="admin-btn admin-btn-primary me-2">
                    <i class="fas fa-save"></i> Сохранить
                </button>
                <a asp-controller="Departure" asp-action="Index" class="admin-btn admin-btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
@model User

@{
    ViewData["Title"] = "Детали пользователя";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <h1>Детали пользователя</h1>
    <div>
        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model.Id" class="admin-btn admin-btn-warning me-2">
            <i class="fas fa-edit"></i> Редактировать
        </a>
        <a asp-controller="Admin" asp-action="Users" class="admin-btn admin-btn-primary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="admin-card-title">Информация о пользователе</h5>
    </div>
    <div class="admin-card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tr>
                        <th>ID</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th>Имя пользователя</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Роль</th>
                        <td>
                            @if (Model.Role == "Admin")
                            {
                                <span class="badge bg-danger">Администратор</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Пользователь</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Профиль пользователя</h5>
                    </div>
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <div class="mb-3">
                            <i class="fas fa-user-circle text-primary" style="font-size: 80px;"></i>
                        </div>
                        <h5 class="mb-1">@Model.Username</h5>
                        <p class="text-muted">@Model.Email</p>
                        <div class="mt-3">
                            <span class="badge @(Model.Role == "Admin" ? "bg-danger" : "bg-primary") p-2">
                                @(Model.Role == "Admin" ? "Администратор" : "Пользователь")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
@model Ticket

@{
    ViewData["Title"] = "Удаление билета";
}

<h1>Удаление билета</h1>

<h3>Вы уверены, что хотите удалить этот билет?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            № кассы
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CashboxNumber)
        </dd>
        <dt class="col-sm-3">
            № рейса
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Flight.FlightNumber)
        </dd>
        <dt class="col-sm-3">
            Дата
        </dt>
        <dd class="col-sm-9">
            @Model.Date.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-3">
            Время
        </dt>
        <dd class="col-sm-9">
            @Model.Time.ToString("HH:mm")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div> 
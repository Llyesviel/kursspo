@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Билеты";
}

<h1>Билеты</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Продать билет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                № кассы
            </th>
            <th>
                № рейса
            </th>
            <th>
                Дата
            </th>
            <th>
                Время
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CashboxNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
            </td>
            <td>
                @item.Date.ToString("dd.MM.yyyy")
            </td>
            <td>
                @item.Time.ToString(@"hh\:mm")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                <a href="javascript:void(0);" onclick="showDeleteConfirmation('@Url.Action("Delete", "Ticket", new { id = item.Id })')" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table> 
@model Ticket

@{
    ViewData["Title"] = "Продажа билета";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Продажа билета</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <h6 class="mb-3">Информация о билете</h6>
                    
                    <div class="form-group mb-3">
                        <label asp-for="CashboxNumber" class="control-label">№ кассы</label>
                        <input asp-for="CashboxNumber" class="form-control" />
                        <span asp-validation-for="CashboxNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FlightId" class="control-label">Рейс</label>
                        <select asp-for="FlightId" class="form-control" asp-items="ViewBag.FlightId"></select>
                        <span asp-validation-for="FlightId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Date" class="control-label">Дата</label>
                                <input asp-for="Date" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Time" class="control-label">Время</label>
                                <input asp-for="Time" class="form-control" type="time" value="@DateTime.Now.ToString("HH:mm")" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="SeatNumber" class="control-label">Место</label>
                        <input asp-for="SeatNumber" class="form-control" placeholder="Например, 15A" />
                        <span asp-validation-for="SeatNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Если поле оставить пустым, место будет назначено автоматически.</small>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h6 class="mb-3">Информация о пассажире</h6>
                    
                    <div class="form-group mb-3">
                        <label asp-for="PassengerName" class="control-label">ФИО пассажира</label>
                        <input asp-for="PassengerName" class="form-control" />
                        <span asp-validation-for="PassengerName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="DocumentNumber" class="control-label">Номер документа</label>
                        <input asp-for="DocumentNumber" class="form-control" placeholder="Серия и номер паспорта" />
                        <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ContactPhone" class="control-label">Телефон</label>
                        <input asp-for="ContactPhone" class="form-control" placeholder="+7 (xxx) xxx-xx-xx" />
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ContactEmail" class="control-label">Email</label>
                        <input asp-for="ContactEmail" class="form-control" type="email" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Сохранить
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
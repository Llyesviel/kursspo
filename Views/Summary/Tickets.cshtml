@model IEnumerable<Airport.ViewModels.TicketSummaryViewModel>

@{
    ViewData["Title"] = "Сводка по билетам";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>№ кассы</th>
            <th>№ рейса</th>
            <th>Самолет</th>
            <th>Дата продажи</th>
            <th>Время продажи</th>
            <th>Время вылета</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CashboxNumber</td>
                <td>@item.FlightNumber</td>
                <td>@item.AircraftModel</td>
                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                <td>@item.Time.ToString(@"hh\:mm")</td>
                <td>@item.DepartureTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                </td>
            </tr>
        }
    </tbody>
</table> 
@model IEnumerable<Flight>

@{
    ViewData["Title"] = "Рейсы";
}

<h1>Рейсы</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить рейс</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                № рейса
            </th>
            <th>
                Самолет
            </th>
            <th>
                Время вылета
            </th>
            <th>
                Свободные места
            </th>
            <th>
                Цена
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aircraft.Name)
            </td>
            <td>
                @item.DepartureTime.ToString("dd.MM.yyyy HH:mm")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)/@item.Aircraft.SeatCount
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                <a href="javascript:void(0);" onclick="showDeleteConfirmation('@Url.Action("Delete", "Flight", new { id = item.Id })')" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table> 
@model Airport.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-left">
            <h1 class="auth-title">Авиаперевозки</h1>
            <p class="auth-subtitle">Система управления авиаперевозками Airport</p>
            <div class="auth-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
            </div>
        </div>
        <div class="auth-right">
            <h2 class="auth-title">CREATE ACCOUNT</h2>
            <form asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
                
                <div class="auth-form-group">
                    <label asp-for="Username">USER NAME</label>
                    <input asp-for="Username" type="text" placeholder="Ваше имя" />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="auth-form-group">
                    <label asp-for="Email">EMAIL</label>
                    <input asp-for="Email" type="email" placeholder="example@mail.com" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="auth-form-group">
                    <label asp-for="Password">PASSWORD</label>
                    <input asp-for="Password" type="password" placeholder="********" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="auth-form-group">
                    <label asp-for="ConfirmPassword">CONFIRM PASSWORD</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="********" />
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <button type="submit" class="auth-submit-btn">SIGN UP</button>
                <p class="auth-text">Already have an account? <a asp-action="Login">Sign In</a></p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
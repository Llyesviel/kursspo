@model Airport.Models.User

@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="card mb-4">
                <div class="card-header bg-primary">
                    <h3 class="text-white">Личная информация</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="avatar-circle mb-3">
                                <span class="avatar-text">@Model.Username.Substring(0, 1).ToUpper()</span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Имя пользователя:</label>
                                <p>@Model.Username</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p>@Model.Email</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Роль:</label>
                                <p><span class="badge bg-info">@Model.Role</span></p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Дата регистрации:</label>
                                <p>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-primary">
                    <h3 class="text-white">Управление аккаунтом</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex flex-wrap">
                        <a asp-action="EditProfile" class="btn btn-outline-primary me-2 mb-2">
                            <i class="bi bi-pencil-square me-2"></i> Редактировать профиль
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-outline-primary me-2 mb-2">
                            <i class="bi bi-key me-2"></i> Сменить пароль
                        </a>
                        <form asp-action="Logout" method="post" class="ms-md-auto">
                            <button type="submit" class="btn btn-danger mb-2">
                                <i class="bi bi-box-arrow-right me-2"></i> Выйти
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: var(--bs-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
    
    .avatar-text {
        font-size: 3rem;
        font-weight: bold;
    }
</style> 